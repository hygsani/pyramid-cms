{% extends view_path + '_template/cms.jinja2' %}

{% block content %}
    <h2>Delete Post</h2>

    <form method="post" action="/admin/post/{{ post.post_id }}/do_delete">
        <div class="form-group row">
            <label for="title" class="col-sm-2 col-for-label">Title:</label>
            <label for="title" class="col-sm-10 col-for-label">{{ post.title }}</label>
        </div>

        <div class="form-group row">
            <label for="content" class="col-sm-2 col-for-label">Content:</label>
            <label for="content" class="col-sm-10 col-for-label">{{ post.content }}</label>
        </div>

        <div class="form-group row">
            <label for="is_published" class="col-sm-2 col-for-label">Status:</label>
            <label for="is_published" class="col-sm-10 col-for-label">
                {% if post.is_published == 1 %}
                    <span class="badge badge-success">Published</span>
                {% else %}
                    <span class="badge badge-danger">Unpublished</span>
                {% endif %}
            </label>
        </div>

        <div class="form-group row">
            <label for="created" class="col-sm-2 col-for-label">Created by, at:</label>
            <label for="created" class="col-sm-10 col-for-label">{{ post.created_by_user.name }}, {{ post.created_at }}</label>
        </div>

        {% if post.updated_by != None or post.updated_at != None %}
            <div class="form-group row">
                <label for="updated" class="col-sm-2 col-for-label">Updated by, at:</label>
                <label for="updated" class="col-sm-10 col-for-label">{{ post.updated_by_user.name }}, {{ post.updated_at }}</label>
            </div>
        {% endif %}

        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <div class="btn-group" role="group">
                    <input type="submit" class="btn btn-danger" value="Delete">
                    <a href="/admin/post" class="btn btn-warning">Back</a>
                </div>
            </div>
        </div>
    </form>
{% endblock content %}