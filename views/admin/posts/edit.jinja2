{% extends view_path + '_template/cms.jinja2' %}

{% block content %}
    <h2>Edit Post</h2>

    <form method="post" action="/admin/post/{{ post.post_id }}/do_edit">
        <div class="form-group row">
            <label for="title" class="col-sm-2 col-for-label">Title</label>

            <div class="col-sm-10">
                <input type="text" name="title" id="title" class="form-control" value="{{ post.title }}" placeholder="title...">
            </div>
        </div>

        <div class="form-group row">
            <label for="content" class="col-sm-2 col-for-label">Content</label>

            <div class="col-sm-10">
                <textarea name="content" id="content" class="form-control" rows="5" placeholder="content...">{{ post.content }}</textarea>
            </div>
        </div>

        <div class="form-group row">
            <label for="is_published" class="col-sm-2 col-for-label">Status</label>

            <div class="col-sm-10">
                <div class="form-check form-check-inline">
                    <input name="is_published" id="is_published" type="radio" class="form-check-input" value="1" {{ 'checked' if post.is_published == 1 else '' }}>
                    <label for="is_published" class="form-check-label">Publish</label>
                </div>
                <div class="form-check form-check-inline">
                    <input name="is_published" id="is_published" type="radio" class="form-check-input" value="0" {{ 'checked' if post.is_published == 0 else '' }}>
                    <label for="is_published" class="form-check-label">Unpublish</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <div class="btn-group" role="group">
                    <input type="submit" class="btn btn-success" value="Update">
                    <a href="/admin/post" class="btn btn-warning">Back</a>
                </div>
            </div>
        </div>
    </form>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#content').summernote({
                placeholder: 'content...',
                tabsize: 2,
                height: 300
            })
        });
    </script>
{% endblock content %}