{% extends view_path + '_template/cms.jinja2' %}

{% block content %}
    <h2>Post Detail</h2>

    <form>
        <div class="form-group row">
            <label for="title" class="col-sm-2 col-for-label">Title:</label>
            <label for="title" class="col-sm-10">{{ post.title }}</label>
        </div>
        <div class="form-group row">
            <label for="content" class="col-sm-2 col-for-label">Content:</label>
            <label for="content" class="col-sm-10">{{ post.content|safe }}</label>
        </div>
        <div class="form-group row">
            <label for="is_published" class="col-sm-2 col-for-label">Status:</label>
            <label for="is_published" class="col-sm-10">
                {% if post.is_published == 1 %}
                    <span class="badge badge-success">Published</span>
                {% else %}
                    <span class="badge badge-danger">Unpublished</span>
                {% endif %}
            </label>
        </div>
        <div class="form-group row">
            <label for="created_at" class="col-sm-2 col-for-label">Created by, at:</label>
            <label for="created_at" class="col-sm-10">{{ post.created_by_user.name }}, {{ post.created_at }}</label>
        </div>

        {% if post.updated_at != None and post.updated_by != None %}
            <div class="form-group row">
                <label for="updated_at" class="col-sm-2 col-for-label">Updated by, at:</label>
                <label for="updated_at" class="col-sm-10">{{ post.updated_by_user.name }}, {{ post.updated_at }}</label>
            </div>
        {% endif %}

        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <a href="/admin/dashboard" class="btn btn-warning">Back</a>
            </div>
        </div>
    </form>
{% endblock content %}