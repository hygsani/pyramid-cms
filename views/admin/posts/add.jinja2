{% extends view_path + '_template/cms.jinja2' %}

{% block content %}
    <h2>Create Post</h2>

    <form method="post" action="">
        <div class="form-group row">
            <label for="title" class="col-sm-2 col-for-label">Title</label>

            <div class="col-sm-10">
                <input type="text" name="title" id="title" class="form-control" placeholder="title...">
            </div>
        </div>

        <div class="form-group row">
            <label for="content" class="col-sm-2 col-for-label">Content</label>

            <div class="col-sm-10">
                <textarea rows="5" type="text" name="content" id="content" class="form-control" placeholder="content..."></textarea>
            </div>
        </div>

        <div class="form-group row">
            <label for="is_published" class="col-sm-2 col-for-label">Status</label>

            <div class="col-sm-10">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="is_published" id="is_published" value="1">
                    <label class="form-check-label" for="is_published">Publish</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="is_published" id="is_published" value="0" checked>
                    <label class="form-check-label" for="is_published">Unpublish</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <div class="btn-group" role="group">
                    <input type="submit" class="btn btn-success" value="Save">
                    <a href="/admin/post" class="btn btn-warning">Back</a>
                </div>
            </div>
        </div>
    </form>
{% endblock content %}