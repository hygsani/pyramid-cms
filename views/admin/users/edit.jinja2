{% extends view_path + '_template/cms.jinja2' %}

{% block content %}
    <h2>Edit Profile</h2>

    <form method="post" action="/admin/user/{{ user.user_id }}/do_edit">
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-for-label">Name</label>

            <div class="col-sm-10">
                <input type="text" name="name" id="name" class="form-control" placeholder="name..." value="{{ user.name }}">
            </div>
        </div>
        <div class="form-group row">
            <label for="email" class="col-sm-2 col-for-label">Email</label>

            <div class="col-sm-10">
                <input type="text" name="email" id="email" class="form-control" placeholder="email..." value="{{ user.email }}">
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-sm-2 col-for-label">Password</label>

            <div class="col-sm-10">
                <input type="password" name="password" id="password" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label for="confirm_password" class="col-sm-2 col-for-label">Confirm Password</label>

            <div class="col-sm-10">
                <input type="password" name="confirm_password" id="confirm_password" class="form-control">
            </div>
        </div>

        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <div class="btn-group" role="group">
                    <input type="submit" class="btn btn-success" value="Update">
                    <a href="/admin/dashboard" class="btn btn-warning">Back</a>
                </div>
            </div>
        </div>
    </form>
{% endblock content %}