{% extends view_path + '_template/cms.jinja2' %}

{% block content %}
    <h2>Change Password</h2>

    <form method="post" action="/admin/user/{{ user.user_id }}/do_change_password">
        <div class="form-group row">
            <label for="password" class="col-sm-2 col-for-label">New Password:</label>

            <div class="col-sm-10">
                <input type="password" class="form-control" name="password" id="password" placeholder="new password...">
            </div>
        </div>
        <div class="form-group row">
            <label for="confirm_password" class="col-sm-2 col-for-label">Confirm New Password:</label>

            <div class="col-sm-10">
                <input type="password" class="form-control" name="confirm_password" id="confirm_password" placeholder="confirm password...">
            </div>
        </div>

        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <div class="btn-group" role="group">
                    <input type="submit" class="btn btn-success" value="Update">
                    <a href="/admin/dashboard" class="btn btn-warning">Back</a>
                </div>
            </div>
        </div>
    </form>
{% endblock content %}